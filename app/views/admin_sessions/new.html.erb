<div id="registration-background">
  <div class="container">
    <div class="row full-height align-items-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card">
          <div class="card-body">
            <%= image_pack_tag 'logo-01.svg', class: 'registration-logo mt-4 mb-5' %>
            <h3 class="card-title mb-0">Inicia Sesión</h3>
            <p class="mb-5 text-muted">Con tu email y contraseña que elegiste en registracion</p>

            <%= form_with( url: admin_sessions_path, local: true, class: 'mt-4 mb-5') do |form| %>
              <%#= render "shared/errors", object: @admin %>

              <div class="form-group">
                <%= form.label "E-mail", for: :admin_email %>
                <%= form.email_field :email, class: 'form-control'%>
              </div>

              <div class="form-group">
                <%= form.label "Contraseña", for: :admin_password %>
                <%= form.password_field :password, class: 'form-control'%>
              </div>

              <div class="form-group row">
                <div class="col-sm-10">
                  <%= form.submit 'Iniciar sesion', class: 'btn btn-primary' %>
                </div>
              </div>

            <% end # End of form%>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>
