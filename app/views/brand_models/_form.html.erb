<%= form_with(model: brand_model, local: true) do |form| %>
  <%= render "shared/errors", object: brand_model %>
  <hr>
  <%= form.label "Marca" %>
  <%= form.select :brand_id, @brands, prompt: "Selectiona marca de modelo" %>
  <hr>
  <%= form.label "Nuevo modelo" %>
  <%= form.text_field :name %>
  <hr>

  <%= form.submit %>

<% end %>
