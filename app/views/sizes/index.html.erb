<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1>Lista de Tallas</h1>
      <ul class="nav">
        <li class="nav-item">
          <%= link_to "Crear nuevo", new_size_path, class: "nav-link active" %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row row-cols-1 row-cols-md-4">
        <% @sizes.each do |size| %>
        <div class="col mb-4">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Talla: <%= size.name %></h4>
            </div>
            <div class="card-footer">
              <%= link_to 'Editar', edit_size_path(size), class: 'card-link' %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
